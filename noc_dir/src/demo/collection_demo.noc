function queue_demo() {

    queue = new queue<int>();
    init_queue(queue);
    enqueue(queue, 4);
    enqueue(queue, 5);
    enqueue(queue, 6);

    index = 4;
    for {
        if (is_queue_empty(queue)) {
            break;
        }
        val = dequeue(queue);
        printf("Val should be %d got %d\n", index, val);
        index++;
    }

    printf("Done\n");

}

