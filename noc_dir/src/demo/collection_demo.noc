function stack_demo(int stack_size) {
    stack = new stack<int>();
    init_stack(stack);
    for (i = 0; i < stack_size; i++) {
        push(stack, i);
    }
    index = stack_size - 1;
    for {
        if (is_empty(stack)) {
            break;
        }
        top = pop(stack);
        printf("top value should be %d got %d\n", index, top);
        index--;
    }
}

